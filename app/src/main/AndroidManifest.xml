<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.dg.dgacademy">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:name=".activities.DgApplication"
        android:theme="@style/AppTheme" >
        <activity android:name=".activities.MainActivity"
            android:screenOrientation="portrait" >
           <intent-filter>
               <action android:name="android.intent.action.MAIN"/>
               <category android:name="android.intent.category.LAUNCHER"/>
           </intent-filter>
        </activity>
        <activity android:name=".activities.SignUpActivity"
            android:screenOrientation="portrait"/>
        <activity android:name=".activities.LoginActivity"
            android:screenOrientation="portrait" />
        <activity android:name=".activities.AllPublicationsActivity"
            android:screenOrientation="portrait"/>
        <activity android:name=".activities.MenuActivity"
            android:screenOrientation="portrait"/>
        <activity android:name=".activities.AllDraftsActivity"
            android:screenOrientation="portrait"/>
        <activity android:name=".activities.PublicationActivity"/>
        <activity android:name=".activities.DraftActivity"/>
        <activity android:name=".activities.DashboardActivity"
            android:screenOrientation="portrait"/>
        <activity android:name=".activities.AllPrivateDraftsActivity"
            android:screenOrientation="portrait"/>
        <activity android:name=".activities.AllPrivatePublicationsActivity"
            android:screenOrientation="portrait"/>
        <activity android:name=".activities.PrivatePublicationActivity" />
        <activity android:name=".activities.ProfileActivity"
            android:screenOrientation="portrait"/>
        <activity android:name=".activities.AboutActivity" />
    </application>
</manifest>
