<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">


    <LinearLayout
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingVertical="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/note_picture"
            android:layout_gravity="top"
            android:layout_marginRight="20dp"
            android:layout_width="36dp"
            android:layout_height="36dp" />

        <LinearLayout
            android:id="@+id/note_action_row"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/note_username"
                    android:textColor="@color/colorAccentSecond"
                    android:textSize="16sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <ImageView
                    android:id="@+id/note_action_image"
                    android:tint="@color/colorPrimaryDark"
                    android:src="@drawable/ic_favorite_black_36dp"
                    android:layout_marginHorizontal="4dp"
                    android:layout_width="16dp"
                    android:layout_height="16dp" />

                <TextView
                    android:id="@+id/note_action_text"
                    android:textColor="@color/colorWhite"
                    android:textSize="16sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </LinearLayout>

            <TextView
                android:id="@+id/note_article"
                android:textSize="14sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/note_created_at"
                android:textSize="12sp"
                android:textColor="@color/colorWhiteAccentDark"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <ImageView
            android:id="@+id/note_delete"
            android:layout_gravity="top"
            android:layout_weight="0"
            android:src="@drawable/ic_close_black_36dp"
            android:tint="@color/colorWhiteAccentDark"
            android:layout_width="36dp"
            android:layout_height="36dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:background="@color/colorPrimaryAccent"
        android:layout_height="1dp">

    </LinearLayout>

</LinearLayout>